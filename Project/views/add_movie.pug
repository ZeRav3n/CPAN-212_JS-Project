extends layout

block content
    if errors
        each error in errors
            p(style="color:red") #{error.msg}
    
    h1 Add Movie
    form(method="POST", action="/movie/add")
        #form-group
            label Name:
            input.form-control(name="name", type="text", placeholder="Enter name")
        #form-group
            label Description:
            input.form-control(name="description", type="text", placeholder="Enter description")
        #form-group
            label Year:
            input.form-control(name="year", type="text", placeholder="Enter year")
        #form-group
            label Genres:
            for genre in genres
                input.form-control(name="genres", type="checkbox", value=genre)
                label= genre
        #form-group
            label Rating:
            input.form-control(name="rating", type="number", placeholder="Enter rating")
    
    input.btn.btn-primary(type="submit", value="Add Movie")