extends layout

block content
    h1= movie.name
    form(method="POST" action="/movie/edit/" + movie._id)
        #form-group
            label Name:
            input.form-control(name="name", type="text", placeholder="Enter name", value=movie.name)
        #form-group
            label Description:
            input.form-control(name="description", type="text", placeholder="Enter description", value=movie.description)
        #form-group
            label Year:
            input.form-control(name="year", type="text", placeholder="Enter year", value=movie.year)
        #form-group
            label Genres:
            for genre in genres
                if movie.genres.includes(genre)
                    input.form-control(name="genres", type="checkbox", value=genre, checked=true)
                else
                    input.form-control(name="genres", type="checkbox", value=genre)
                label= genre
        #form-group
            label Rating:
            input.form-control(name="rating", type="number", placeholder="Enter rating", value=movie.rating)
        br
        input.btn.btn-primary(type="submit", value="Edit Movie")